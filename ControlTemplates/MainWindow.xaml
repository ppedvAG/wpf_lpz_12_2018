<Window x:Class="ControlTemplates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTemplates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <Button HorizontalAlignment="Center" Style="{x:Null}" Margin="20">Normal</Button>
            <Button  Background="Red" BorderBrush="Yellow" Width="300">
                Runder Button</Button>
        </StackPanel>
    </Viewbox>
</Window>
